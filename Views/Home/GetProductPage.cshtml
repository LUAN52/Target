@model Product

@if (User.Identity.IsAuthenticated)
{

    <div class="formCont">
        <h1>Buscar Produto</h1>
        <form class="form" asp-action="GetProductList" asp-controller="home">
            <select id="typeId" class="form-select" aria-label="Default select example" name="searchType">
                <option selected>selecione o tipo de busca</option>
                <option value="1">nome</option>
                <option value="2">categoria</option>
            </select>
            <div id="nameId" class="form-group searchForm">
                <label >Busca</label>
                <input asp-for="Name"  type="text" class="form-control" placeholder="digite o nome ou categoria para buscar"
              >
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
             <div class="form-group searchForm">
                <label>Busca</label>
                <input asp-for="Category" id="CategoryId" type="text" class="form-control" placeholder="digite o nome ou categoria para buscar">
                <span  asp-validation-for="Category"id="searchErrorId" class="text-danger"></span>
            </div>
                <div class="buttonContainer ">
                <div>
                    <button id="buttonConfId" type="button" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
            <div id="buttonId" class="buttonContainer searchForm">
                <div>
                    <button  type="submit" class="btn btn-primary">Buscar</button>
                    <button class="btn btn-danger" asp-action="index" asp-controller="Home">Cadastrar-se</button>
                </div>
            </div>
        </form>
    </div>
  
}
else
{


    <div class="loginContainer">
        <h2>Necess√°rio realizar login</h2>
        <a asp-action="login" asp-controller="Account" class="btn btn-primary">Logar-se</a>
    </div>


}

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");};
}
