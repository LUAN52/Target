@model Product

<div class="formCont">
  <h1>atualizar Produto</h1>
  <form asp-action="UpdateProduct" asp-controller="Home" class="form">
    <div class="form-group">
      <label for="productName">Nome produto</label>
      <input type="text" class="form-control" placeholder="digite o nome produto" name="productName"
        value="@Model.Name">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1">Preço</label>
      <input type="text" class="form-control" placeholder="preço" name="price" value="@Model.Price">
      <div class="form-group">
        <input type="hidden" class="form-control" placeholder="preço" name="id" value="@Model.Id">
      </div>
    </div>
    <div class="buttonContainer">
      <div>
        <button type="submit" class="btn btn-primary">Atualizar Produto</button>
       <a  asp-action ="Index" asp-controller="Home"id="cancelarId"  class="btn btn-danger">Cancelar</a>
        </div>
    </div>
  </form>
</div>