@model Product

@{
    if (User.Identity.IsAuthenticated)
    {
        <div class="formCont">
            <div class="titleContaier">
                <h1 class="subTtitle"> Cadastrar Produto</h1>
            </div>
            <form asp-action="AddProduct" asp-controller="Home" class="form">
                <div class="form-group">
                    <label asp-for="Name">Nome produto</label>
                    <input asp-for="Name" id="nameId" type="text" class="form-control" placeholder="digite o produto" name="name">
                    <span asp-validation-for="Name"id="nameErrorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category">Categoria</label>
                    <input asp-for="Category"id="categoryId" type="text" class="form-control" placeholder="digite a categoria" name="category">
                    <span asp-validation-for="Category"id="categoryErrorId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price">Preço</label>
                    <input asp-for="Price" type="text" class="form-control" id="precoId" placeholder="digite o preço" name="price">
                    <span asp-validation-for ="Price" id="priceErrorId" class="text-danger"></span>
                </div>
                <div class="buttonContainer">
                    <div>
                        <button id="aqui" type="submit" class="btn btn-primary">Adicionar Produto</button>
                        <button  asp-action ="Index" asp-controller="Home"id="cancelarId"  class="btn btn-danger">Cancelar</button>
                    </div>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="loginContainer">
            <h2>Necessário realizar login</h2>
            <a asp-action="Login" asp-controller="Account" id="logar" type="submit"
        class="btn btn-primary">Logar-se</a>
        </div>

    }
}

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~js/getProduct.js"></script>