<div class="formCont">
    <h1>cadastro de cliente</h1>
    <form id="formi" class="form" method="POST">
        <div class="form-group">
            <label for="productName">Nome</label>
            <input id="nameId" type="text" class="form-control" placeholder="digite seu nome">
            <span id="nameErrorId" class="text-danger"></span>
        </div>
        <div class="form-group">

            <label for="email">Email</label>
            <input type="text" class="form-control" id="emailId" placeholder="email">
            <span id="emailErrorId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Senha</label>
            <input type="password" class="form-control" id="passwordId" placeholder="senha">
            <span id="passwordErrorId" class="text-danger"></span>
        </div>
        <div class="buttonContainer">
            <div>
                <button id="registerId" type="submit" class="btn btn-primary">Resgistrar-se</button>
                <button  asp-action ="Index" asp-controller="Home"id="cancelarId"  class="btn btn-danger">Cancelar</button>
            </div>
        </div>
        
    </form>

</div>
<script src="~/js/register.js"></script>